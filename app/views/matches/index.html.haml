.col-md-4.col-sm-4.col-md-offset-4.col-sm-offset-4
  %h3
    = "#{@game.name} Matches"
  =link_to "Add Match", new_game_match_path(@game.id), class: "btn btn-sm btn-primary"
  %table.table
    %thead
      %tr
        %th Name
        %th Venue
        %th Player On
        %th Action
    %tbody
      -@matches.each do | match |
        %tr
          %td
            =match.name
          %td
            =match.venue
          %td
            =match.played_on
          %td
            =link_to "Edit", edit_game_match_path(@game.id, match.id)
          %td
            =link_to "Show", game_match_path(@game.id, match.id)
          %td
            =link_to "Delete", game_match_path(@game.id, match.id), method: :delete
